<%= form_for @movie do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :release_year %>
  <%= f.select :release_year, (1900..2009).to_a.map(&:to_s) %>
  </p>
  <% @genres.each do |genre| %>
    <p>
    <label>
      <%=h genre.name %>
      <%= check_box_tag "genres[]", genre.id %>
    </label>
    </p>
  <% end %>
  <%= f.submit "Save" %>
<% end %>
